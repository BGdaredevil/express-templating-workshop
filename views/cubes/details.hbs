<h1>{{cube._name}}</h1>
<img class="cube" src="{{cube._imageUrl}}" />
<div class="details">
  <p><span>Description:</span>
    {{cube._description}}</p>
  <p><span>Difficulty level:</span> {{cube._difficultyLevel}}</p>
  <a class="btn" href="/">Back</a>
  {{#if isOwner}}
    <a class="btn" href="/cube/{{cube._id}}/edit">Edit</a>
  <a class="btn" href="/cube/{{cube._id}}/delete">Delete</a>
  <a class="btn" href="/cube/{{cube._id}}/accessory/add">Attach accessories</a>
  {{/if}}
</div>
<h2>Accessories</h2>
<div class="accessories">
  {{#if cube.hasAcc}}
  {{#each cube._Accessories}}
  {{> accCard}}
  {{/each}}
  {{else }}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>